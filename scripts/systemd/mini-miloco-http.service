[Unit]
Description=Mini Miloco MCP HTTP Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/ABSOLUTE/PATH/TO/ENV/bin/mini-miloco-http --token-file /ABSOLUTE/PATH/TO/mini_miloco/config/miot_oauth.json --host 0.0.0.0 --port 9000 --path /mcp
Restart=always
RestartSec=3
WorkingDirectory=/ABSOLUTE/PATH/TO/mini_miloco
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
