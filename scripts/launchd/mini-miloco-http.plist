<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.harborc.mini-miloco-http</string>

    <key>ProgramArguments</key>
    <array>
      <string>/ABSOLUTE/PATH/TO/ENV/bin/mini-miloco-http</string>
      <string>--token-file</string>
      <string>/ABSOLUTE/PATH/TO/mini_miloco/config/miot_oauth.json</string>
      <string>--host</string>
      <string>127.0.0.1</string>
      <string>--port</string>
      <string>9000</string>
      <string>--path</string>
      <string>/mcp</string>
    </array>

    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/mini-miloco-http.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/mini-miloco-http.err</string>
  </dict>
</plist>
